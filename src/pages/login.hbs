<div class='login_wrap'>
  <div class='login_window'>
    <div class='login_title'>Вход</div>

    <form id="login_form">
      <div class='text_field'>
        <label class='text_field__label' for='login'>Логин</label>
        <input class='text_field__input' type='text' name='login' id='login' placeholder='Login' />
        <label class='text_field__label fail_color' for='login'>Неверный логин</label>

      </div>
      <div class='text_field'>
        <label class='text_field__label' for='password'>Пароль</label>
        <input class='text_field__input' type='password' name='password' id='password' placeholder='password' />
      </div>
      <div class='text_field buttons_group'>
        <input class='btn btn__primary' type='submit' name='login_btn_enter' id='login_btn_enter' value='Войти'>
        <input class='btn btn__secondary' type='submit' name='login_btn_noacc' id='login_btn_noacc' value='Нет аккаунта?'>
      </div>
    </form>

  </div>
</div>