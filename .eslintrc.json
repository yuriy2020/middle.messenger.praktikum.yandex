{
  "extends": "google",
  "env": {
    "browser": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": ["error", 2],
        "no-multi-spaces": 1,
        "curly": "warn",
        "max-len": ["error", { "code": 120, "ignoreComments": true }],
        "require-jsdoc" : 0
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {}
}
